{
	"bin": {},
	"devDependencies": {
		"@types/node": "^14.11.8",
		"browserify": "^16",
		"typescript": "^4"
	},
	"dependencies": {
		"@joelek/ts-autoguard": "github:joelek/ts-autoguard#semver:^4",
		"@joelek/ts-sockets": "github:joelek/ts-sockets#wip"
	},
	"license": "UNLICENSED",
	"main": "./build/server.js",
	"name": "@joelek/castaway",
	"repository": {
		"type": "git",
		"url": "https://github.com/joelek/castaway.git"
	},
	"scripts": {
		"build": "rm -rf ./build/ && npx tsc --build && npm run bundle",
		"bundle": "npx browserify ./build/client.js --outfile ./build/client.bundle.js",
		"clean": "rm -rf ./build/ ./node_modules/",
		"codegen": "npx autoguard --standalone=false",
		"preversion": "npm run build && git add ./",
		"postversion": "git push && git push --tags"
	},
	"version": "0.0.0"
}
