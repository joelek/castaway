{
	"bin": {},
	"devDependencies": {
		"@joelek/ts-autoguard": "github:joelek/ts-autoguard#semver:^4",
		"@joelek/ts-sockets": "github:joelek/ts-sockets#semver:^2",
		"@types/node": "^14.11.8",
		"typescript": "^4",
		"webpack": "^5.1.2",
		"webpack-cli": "^4.0.0"
	},
	"dependencies": {},
	"license": "UNLICENSED",
	"main": "./dist/server.min.js",
	"name": "@joelek/castaway",
	"repository": {
		"type": "git",
		"url": "https://github.com/joelek/castaway.git"
	},
	"scripts": {
		"build": "rm -rf ./dist/ && npx tsc && npm run bundle",
		"bundle:client": "npx webpack --entry ./build/client.js --output-filename client.min.js --target web",
		"bundle:server": "npx webpack --entry ./build/server.js --output-filename server.min.js --target node",
		"bundle:index": "npx webpack --entry ./build/index.js --output-filename index.min.js --target node",
		"bundle": "npm run bundle:client && npm run bundle:server && npm run bundle:index",
		"clean": "rm -rf ./build/ ./node_modules/",
		"codegen": "npx autoguard --standalone=false",
		"preversion": "npm run build && git add ./",
		"postversion": "git push && git push --tags"
	},
	"version": "0.0.15"
}
